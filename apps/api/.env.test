# Test Environment Configuration for Y Monitor API

# Database
DATABASE_URL="postgresql://test:test@localhost:5432/ymonitor_test?schema=public"

# JWT
JWT_SECRET="test-jwt-secret-key-for-testing-only"
JWT_EXPIRES_IN="7d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# InfluxDB
INFLUXDB_URL="http://localhost:8086"
INFLUXDB_TOKEN="test-token"
INFLUXDB_ORG="test-org"
INFLUXDB_BUCKET="test-bucket"

# SNMP
SNMP_TIMEOUT=5000
SNMP_RETRIES=3
SNMP_BATCH_SIZE=5

# Sensor Configuration
SENSOR_BATCH_SIZE=3
SENSOR_POLLING_INTERVAL=120

# Monitoring
INTERFACE_POLLING_INTERVAL=60
DEVICE_DISCOVERY_INTERVAL=300

# Logging
LOG_LEVEL="error"
LOG_FORMAT="json"

# API Configuration
API_PORT=3001
API_HOST="localhost"
API_PREFIX="api/v1"

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Testing flags
NODE_ENV="test"
DISABLE_EXTERNAL_SERVICES=true
MOCK_SNMP_RESPONSES=true
MOCK_INFLUXDB=true